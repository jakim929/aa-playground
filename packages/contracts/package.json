{
  "name": "@aa-playground/contracts",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "anvil": "anvil --block-time 2",
    "deploy:anvil:multicall3": "cast rpc -r http://127.0.0.1:8545 anvil_setCode 0xcA11bde05977b3631167028862bE2a173976CA11 $(cat constants/multicall3_bytecode.txt)",
    "deploy:anvil:entrypoint": "cast rpc -r http://127.0.0.1:8545 anvil_setCode 0x5FF137D4b0FDCD49DcA30c7CF57E578a026d2789 $(cat constants/entrypoint_bytecode.txt)",
    "deploy:anvil": "source .env.anvil && pnpm deploy:anvil:multicall3 && pnpm deploy:anvil:entrypoint && forge create src/Counter.sol:Counter --rpc-url $JSON_RPC_HTTP_URL --private-key $DEPLOYER_PRIVATE_KEY --constructor-args $OWNER_ADDRESS",
    "dev:anvil": "concurrently -n anvil,deploy_contracts -c cyan,magenta \"pnpm run anvil --silent\" \"sleep 1 && pnpm run deploy:anvil\"",
    "deploy:devnet": "source .env.devnet && forge create src/Counter.sol:Counter --rpc-url $JSON_RPC_HTTP_URL --private-key $DEPLOYER_PRIVATE_KEY --constructor-args $OWNER_ADDRESS"
  },
  "dependencies": {
    "solmate": "^6.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#74cfb77e308dd188d2f58864aaf44963ae6b88b1"
  }
}
